<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/bg_discount">

    <!--    头部：-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/back"
            android:id="@+id/backto"
            style="@style/text2"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的钱包"
            style="@style/text1"
            android:textAlignment="center" />


    </LinearLayout>

    <!--    中间部分-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/bt2"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额"
                style="@style/text1"
                android:id="@+id/yue"

                />
            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_alignBottom="@+id/yue"
                android:layout_marginStart="280dp"
                android:background="@drawable/bt1"
                />




        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0.00"
            style="@style/text1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钱包余额："
                style="@style/text2"
                android:id="@+id/bagyue"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                style="@style/text2"
                android:layout_marginStart="75dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆余额："
                style="@style/text2"
                android:layout_marginStart="220dp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00>"
                style="@style/text2"
                android:layout_marginStart="300dp"
                />




        </RelativeLayout>
    </LinearLayout>

    <!--下部部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="钱包管理:"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/mycode_linebg"
                android:orientation="vertical">

                <TextView
                    style="@style/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电子钱包"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <TextView
                    style="@style/text4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="立即开通>"
                    android:textAlignment="center"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/mycode_linebg"
                android:orientation="vertical">

                <TextView
                    style="@style/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="钱包明细"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <TextView
                    style="@style/text4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="去查看>"
                    android:textAlignment="center"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="免密支付:"
                    android:textSize="20sp" />

                <TextView
                    style="@style/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="管理>>"
                    android:layout_marginLeft="200dp"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:background="@drawable/bg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                    <TextView
                        style="@style/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝" />


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开通后车辆立场时将自动扣款" />


                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="立即开通"
                    style="@style/text2"

                    android:background="@drawable/bg3"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                    <TextView
                        style="@style/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="云闪付" />


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开通后车辆立场时将自动扣款" />


                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="立即开通"
                    style="@style/text2"

                    android:background="@drawable/bg3"/>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>