<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="470dp">
        <EditText
            android:id="@+id/car_type"
            android:layout_marginLeft="100dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入您的车型..."
            android:textColorHint="@color/gray"
            android:background="@color/white"
            android:text="">
        </EditText>

        <EditText
            android:id="@+id/car_num"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:hint="请输入您的车牌号..."
            android:textColorHint="@color/gray"
            android:background="@color/white"
            android:text=""
            android:layout_alignTop="@+id/car_type"
            android:layout_marginTop="85dp">
        </EditText>

        <EditText
            android:id="@+id/car_else"
            android:textColor="@color/black"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="其他信息"
            android:textColorHint="@color/gray"
            android:background="@color/white"
            android:text=""
            android:layout_alignTop="@+id/car_num"
            android:layout_marginTop="90dp">
        </EditText>

        <TextView
            android:id="@+id/car_add"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="157dp"
            android:textSize="20sp"
            android:text="添加车辆"
            android:layout_alignTop="@+id/car_else"
            android:layout_marginTop="100dp"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>


</LinearLayout>