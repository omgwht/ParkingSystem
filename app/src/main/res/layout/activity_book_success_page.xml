<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_to_save"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/parkingcode">
    <ImageView
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/quit"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="16dp">

    </ImageView>
    <GridLayout
        android:id="@+id/parkingcode_content"
        android:layout_width="match_parent"
        android:layout_marginTop="210dp"
        android:layout_height="404dp"
        android:rowCount="11"
        android:columnCount="3"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginStart="26dp"
            android:text="姓名:"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_row="0"
            android:layout_column="0"
            />
        <TextView
            android:text="电话:"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_row="0"
            android:layout_column="2"

            />

        <EditText
            android:id="@+id/pc_name"
            android:background="#00FFFFFF"
            android:layout_marginStart="26dp"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="24sp"
            android:text="张三"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/pc_phone"
            android:layout_column="2"
            android:layout_row="1"

            android:background="#00FFFFFF"
            android:text="18339768085"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <TextView
            android:layout_marginStart="26dp"
            android:text="汽车型号:"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_row="2"
            android:layout_column="0"
            />
        <EditText
            android:background="#00FFFFFF"
            android:id="@+id/pc_carstyle"
            android:layout_marginStart="26dp"
            android:layout_column="0"
            android:layout_row="3"
            android:textSize="24sp"
            android:text="比亚迪-汉"
            android:textColor="@color/black"/>


        <TextView
            android:layout_marginStart="26dp"
            android:text="车牌号:"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_row="4"
            android:layout_column="0"
            />
        <TextView

            android:text="停车位置:"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_row="4"
            android:layout_column="2"
            />


        <EditText
            android:background="#00FFFFFF"
            android:id="@+id/pc_carid"
            android:layout_marginStart="26dp"
            android:textSize="24sp"
            android:layout_row="5"
            android:layout_column="0"
            android:text="豫A-F128H"
            android:textColor="@color/black"/>

        <EditText
            android:background="#00FFFFFF"
            android:id="@+id/pc_carlocate"
            android:textSize="24sp"
            android:layout_row="5"
            android:layout_column="2"
            android:text="#A 08"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginStart="26dp"
            android:text="起始时间:"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_row="6"
            android:layout_column="0"

            />
        <TextView
            android:layout_row="6"
            android:layout_column="2"
            android:text="收费标准:"
            android:textColor="@color/black"
            android:textSize="19sp"
            />



        <EditText
            android:background="#00FFFFFF"
            android:layout_width="200dp"
            android:id="@+id/pc_carstarttime"
            android:layout_marginStart="26dp"
            android:textSize="24sp"
            android:layout_row="7"
            android:layout_column="0"
            android:text="2023-05-21-14:33"
            android:inputType="textMultiLine"
            android:textColor="@color/black"/>

        <EditText
            android:background="#00FFFFFF"
            android:id="@+id/pc_carpaystand"
            android:textSize="24sp"
            android:layout_row="7"
            android:layout_column="2"
            android:text="4元/时"
            android:textColor="@color/black"/>


        <TextView
            android:layout_marginStart="26dp"
            android:text="停车地址:"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_row="8"
            android:layout_column="0"
            />
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#00FFFFFF"
            android:id="@+id/pc_locate"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="开封市，龙亭区，武夷山大街，鑫源小区停车场"/>

    </GridLayout>


    <TextView
        android:textColor="@color/black"
        android:clickable="true"
        android:id="@+id/download"
        android:layout_marginTop="84dp"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存至相册"
        />


</LinearLayout>

